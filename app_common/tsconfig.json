{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
    },
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,    // 型定義ファイルを出力
    "emitDeclarationOnly": false, // JS も同時に出力する場合は false
  },
  "include": ["src/**/*"]
}
